<% provide(:title, @user.name) %>


<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h2><%= @user.name %></h2></div>
  <div class="panel-body">


    <div class="container">
      <% if @user.picks.count < 10 && @user.picks.where(super: true).count < 5 %>
        <p> You have less than 10 Total Picks and less than 5 Super Picks! </p>
        <br>
        <%= button_to "Pick More Bets Here!", bets_path, :class => "btn btn-success btn-lg btn-block", :method => :get %>
        <br>
      <% elsif @user.picks.count < 10 %>
        <p> You don't have enough Total Picks! </p>
        <br>
        <%= button_to "Pick More Bets Here!", bets_path, :class => "btn btn-success btn-lg btn-block", :method => :get %>
        <br>
      <% elsif @user.picks.where(super: true).count < 5 %>
        <p> You don't have enough Super Picks! </p>
        <p> Delete Regular Picks below and then..</p>
      <% else %>
        <p> Looks like youre good to go </p>
      <% end %>
    </div>
  </div>
</div>






<div class="container">
  <div class="row">
    <div class="col-xs-6">
    <% if @user.picks.any? %>
    <div class="well"><strong>Picks</strong>:<br> (<%= @user.picks.count %> / 10)</div>
      </div>
    <div class="col-xs-6">
    <div class="well"><strong>Super Picks:</strong><br>(<%= @user.picks.where(super: true).count %> / 5)</div>
  </div>
  </div>
</div>


<div class="table-responsive">
  <table class=" table table-hover">
      <thead>
        <tr>
          <th><%= "Title" %></th>
          <th><%= "Benchmark" %></th>
          <th><%= "Selection" %></th>
          <th><%= "Locked?" %></th>
          <th><%= "Value" %></th>
          <th><%= "Delete?" %></th>
        </tr>
      </thead>
      <tbody>
          <%= render @picks %>
      </tbody>
    </table>
  </div>
<% end %>
